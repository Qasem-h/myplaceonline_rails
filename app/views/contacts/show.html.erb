<%= render layout: "shared/model_show" do %>

  <%= attribute_table_row(t("myplaceonline.contacts.name"), @obj.name) %>
  <%= attribute_table_row(t("myplaceonline.contacts.birthday"), @obj.birthday) %>
  <%= attribute_table_row_markdown(t("myplaceonline.contacts.notes"), @obj.notes) %>
  <% @obj.contact_identity.identity_emails.each do |email| %>
    <%= attribute_table_row_email(t("myplaceonline.identities.email"), email.email) %>
  <% end %>
  <% @obj.contact_identity.identity_phones.each do |phone| %>
    <%= attribute_table_row(t("myplaceonline.identities.phone"), phone.number) %>
  <% end %>
  <% @obj.all_conversations.each do |conversation| %>
    <%= attribute_table_row_markdown(t("myplaceonline.contacts.conversation") + " (" + Myp.display_date(conversation.when.nil? ? conversation.created_at : conversation.when, current_user) + ")", conversation.conversation) %>
  <% end %>
  <% @obj.contact_identity.identity_locations.each do |identity_location| %>
    <%= attribute_table_row_reference(t("myplaceonline.identities.location"), "location_path", identity_location.location) %>
  <% end %>
<% end %>
