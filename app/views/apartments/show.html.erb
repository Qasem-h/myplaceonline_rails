<%= render layout: "shared/model_show" do %>

  <%= attribute_table_row_reference(t("myplaceonline.apartments.location"), "location_path", @obj.location) %>
  <%= attribute_table_row_reference(t("myplaceonline.apartments.landlord"), "contact_path", @obj.landlord) %>
  <% @obj.apartment_leases.each do |lease| %>
  
    <%= attribute_table_row_markdown(
      t("myplaceonline.apartments.lease"),
      %{
* #{t("myplaceonline.apartments.start_date")}: #{display_date(lease.start_date)}
* #{t("myplaceonline.apartments.end_date")}: #{display_date(lease.end_date)}
* #{t("myplaceonline.apartments.monthly_rent")}: #{display_currency(lease.monthly_rent)}
* #{t("myplaceonline.apartments.deposit")}: #{display_currency(lease.deposit)}
* #{t("myplaceonline.apartments.moveout_fee")}: #{display_currency(lease.moveout_fee)}
* #{t("myplaceonline.apartments.terminate_by")}: #{display_date(lease.terminate_by)}
      }
    ) %>

  <% end %>

<% end %>
