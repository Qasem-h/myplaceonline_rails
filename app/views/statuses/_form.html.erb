<p><%= t("myplaceonline.statuses.first_status", :evidence => link_to(t("myplaceonline.statuses.some_evidence"), root_path + "PosPsyProgress.pdf", :data => {:ajax => "false"})).html_safe %></p>
<%= myp_datetime_field(f, :status_time, "myplaceonline.statuses.status_time", obj.status_time) %>
<%= myp_text_field(f, :status1, "myplaceonline.statuses.status1", obj.status1, autofocus) %>
<%= myp_text_field(f, :status2, "myplaceonline.statuses.status2", obj.status2) %>
<%= myp_text_field(f, :status3, "myplaceonline.statuses.status3", obj.status3) %>
<%= myp_text_area_markdown(f, :three_good_things, "myplaceonline.statuses.three_good_things", obj.three_good_things, collapsed: false) %>
<%= myp_select(f, :feeling, "myplaceonline.statuses.feeling", Myp.translate_options(Status::FEELINGS), obj.feeling) %>
<div data-role="collapsible" data-collapsed="true">
  <h4><%= t("myplaceonline.statuses.need_help") %></h4>
  <p><%= raw(Myp.parse_yaml_to_html("myplaceonline.statuses.status_ideas")) %></p>
</div>
<div data-role="collapsible" data-collapsed="true">
  <h4><%= t("myplaceonline.statuses.stoic") %></h4>
  <%= myp_text_field(f, :stoic_ailments, "myplaceonline.statuses.stoic_ailments", obj.stoic_ailments) %>
  <%= myp_text_field(f, :stoic_failings, "myplaceonline.statuses.stoic_failings", obj.stoic_failings) %>
  <%= myp_text_field(f, :stoic_failed, "myplaceonline.statuses.stoic_failed", obj.stoic_failed) %>
  <%= myp_text_field(f, :stoic_duties, "myplaceonline.statuses.stoic_duties", obj.stoic_duties) %>
  <%= myp_text_field(f, :stoic_improvement, "myplaceonline.statuses.stoic_improvement", obj.stoic_improvement) %>
  <%= myp_text_field(f, :stoic_faults, "myplaceonline.statuses.stoic_faults", obj.stoic_faults) %>
</div>
