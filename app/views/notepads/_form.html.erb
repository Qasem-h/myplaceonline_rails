<% if !@myplet %>
  <%= myp_text_field(f, :title, "myplaceonline.notepads.title", obj.title, autofocus) %>
<% end %>
<%=
  render partial: 'myplaceonline/rte', locals: {
    f: f,
    markdown_data: obj.notepad_data,
    hidden_field_name: @myplet.nil? ? :notepad_data : nil,
    non_hidden_url: "/notepads/" + obj.id.to_s
  }
%>
<% if !@myplet %>
  <%= myp_check_box(f, :is_archived, "myplaceonline.general.archived") %>
<% end %>
