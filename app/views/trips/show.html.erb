<%= render layout: "shared/model_show" do %>

  <%= attribute_table_row_reference(t("myplaceonline.trips.location"), "location_path", @obj.location) %>
  <%= attribute_table_row_date(t("myplaceonline.trips.started"), @obj.started) %>
  <%= attribute_table_row_date(t("myplaceonline.trips.ended"), @obj.ended) %>
  <%= attribute_table_row_markdown(t("myplaceonline.trips.notes"), @obj.notes) %>
  <%= attribute_table_row_boolean(t("myplaceonline.trips.work"), @obj.work) %>
  <%= attribute_table_row_date_diff(t("myplaceonline.trips.duration"), @obj.started, @obj.ended) %>
  <%=
    render partial: 'myplaceonline/pictures', locals: {
      pics: @obj.trip_pictures,
      placeholder: "myplaceonline.trips.picture"
    }
  %>
  <%= attribute_table_row_reference(t("myplaceonline.trips.hotel"), "hotel_path", @obj.hotel) %>
  
  <% content_for :postfooterlinks do %>
    <li><%= link_to t("myplaceonline.general.share"), permissions_share_token_path(subject_class: @obj.class.name, subject_id: @obj.id), "data-icon" => "action" %></li>
    <li><%= link_to t("myplaceonline.trips.show_shared"), trip_shared_path(@obj), "data-icon" => "search" %></li>
  <% end %>
<% end %>
