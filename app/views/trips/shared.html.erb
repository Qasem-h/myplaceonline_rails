<% content_for :heading do -%><%= @obj.display %><% end -%>
<div class="horizontal_center">
<h1><%= @obj.display %></h1>
<% if !@obj.notes.blank? %>
  <p><%= markdown_content(@obj.notes) %></p>
<% end %>
<hr />
<% random_name = "slideshow-" + SecureRandom.hex(10) %>
<p><%= link_to(t("myplaceonline.pictures.slideshow"), "#", class: "ui-btn ui-btn-inline", id: random_name) %></p>
<%=
  render partial: 'myplaceonline/picture_slideshow', locals: {
    pics: @obj.trip_pictures.map{|x| x.identity_file},
    random_name: random_name
  }
%>
<% @obj.trip_pictures.each do |pic| %>
  <p><%= image_content(pic.identity_file) %></p>
  <% if !pic.identity_file.notes.blank? %>
    <p><%= markdown_content(pic.identity_file.notes) %></p>
  <% end %>
  <hr />
<% end %>
<% if !@obj.identity_file.nil? %>
  <p><%= url_or_blank(file_download_path(@obj.identity_file, token: params[:token]), t("myplaceonline.trips.download_zip") + " (" + bytes_number(@obj.identity_file.file_file_size) + ")", nil, "ui-btn ui-btn-inline", true) %></p>
<% end %>
</div>
