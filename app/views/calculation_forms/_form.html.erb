<%= myp_text_field f, :name, "myplaceonline.calculation_forms.name", obj.name, autofocus %>
<div data-role="collapsible" data-collapsed="false">
  <h3>Formula</h3>
  <%= f.fields_for :root_element, obj.root_element do |element_form| %>
    <%= element_form.fields_for :left_operand, obj.root_element.left_operand do |operand_form| %>
      <div data-role="collapsible" data-collapsed="true">
        <h3>Left Operand</h3>
        <div data-role="collapsible-set">
          <div data-role="collapsible" data-collapsed="false">
            <h3><%= t("myplaceonline.calculation_forms.constant") %></h3>
            <%= myp_text_field operand_form, :constant_value, "myplaceonline.calculation_forms.constant_value", obj.root_element.left_operand.constant_value %>
          </div>
          <div data-role="collapsible" data-collapsed="true">
            <h3><%= t("myplaceonline.calculation_forms.sub_element") %></h3>
            <button><%= t("myplaceonline.calculation_forms.create_sub_element") %></button>
          </div>
        </div>
      </div>
    <% end %>
    <%= myp_select element_form, :operator, "myplaceonline.calculation_forms.operator", { "+ (Add)" => 1, "- (Subtract)" => 2, "* (Multiply)" => 3, "/ (Divide)" => 4 }, obj.root_element.operator %>
    <%= element_form.fields_for :right_operand, obj.root_element.right_operand do |operand_form| %>
      <div data-role="collapsible" data-collapsed="true">
        <h3>Right Operand</h3>
        <div data-role="collapsible-set">
          <div data-role="collapsible" data-collapsed="false">
            <h3><%= t("myplaceonline.calculation_forms.constant") %></h3>
            <%= myp_text_field operand_form, :constant_value, "myplaceonline.calculation_forms.constant_value", obj.root_element.right_operand.constant_value %>
          </div>
          <div data-role="collapsible" data-collapsed="true">
            <h3><%= t("myplaceonline.calculation_forms.sub_element") %></h3>
            <button><%= t("myplaceonline.calculation_forms.create_sub_element") %></button>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
