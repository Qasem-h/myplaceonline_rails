<%# items: list %>

<%
maxitems = 4
%>

<% if items.length > maxitems %>
  <div data-role="popup" data-history="false" id="popupMoreMenu_<%= request.uuid %>">
    <ul data-role="listview">
      <% items.drop(maxitems).each do |item| %>
        <li><%= link_to(item[:title], item[:link], class: "ui-btn ui-btn-icon-left ui-icon-" + item[:icon]) %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div data-role="footer" data-position="fixed" data-tap-toggle="false">
  <div data-role="navbar">
    <ul>
      <% items.first(maxitems).each do |item| %>
        <li><%= link_to(item[:title], item[:link], "data-icon" => item[:icon]) %></li>
      <% end %>
      <% if items.length > maxitems %>
        <li><%= link_to(t("myplaceonline.general.more"), "#popupMoreMenu_" + request.uuid, "data-icon" => "grid", "data-rel" => "popup") %></li>
      <% end %>
    </ul>
  </div>
</div>
