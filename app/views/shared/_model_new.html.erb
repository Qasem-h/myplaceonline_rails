<% content_for :heading do -%><%= t("myplaceonline.general.add") + " " + t("myplaceonline.category." + controller.category_name).singularize %><% end -%>
<h1><%= t("myplaceonline.general.add") + " " + t("myplaceonline.category." + controller.category_name).singularize %></h1>
<%= flashes! %>

<%= form_for @obj, :url => @url, :remote => controller.may_upload, data: { ajax: !controller.may_upload } do |f| %>

<%= render partial: "shared/model_form", locals: { form_name: controller.form_path, edit: false, autofocus: true, f: f } %>

  <%= yield %>

  <div data-role="footer" data-position="fixed" data-tap-toggle="false">
    <div data-role="navbar">
      <ul>
        <li>
          <%= f.submit(t("myplaceonline.general.save") + " " + t("myplaceonline.category." + controller.category_name).singularize, "data-icon" => "check", "data-iconpos" => "top", "style" => "background-color: green") %>
        </li>
        <% if content_for?(:footerlinks) %>
          <%= content_for(:footerlinks) %>
        <% end %>
        <% if true %>
          <li><%= link_to t("myplaceonline.general.cancel"), controller.index_path, "data-icon" => "back" %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <script type="text/javascript">
  myplaceonline.onPageLoad(function() {
    myplaceonline.maybeFocus(".autofocus");
  });
  </script>

<% end %>
