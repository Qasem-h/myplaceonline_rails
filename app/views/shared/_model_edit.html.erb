<% content_for :heading do -%><%= t("myplaceonline.category." + controller.category_name) %><% end -%>
<h1><%= controller.display_obj(@obj) %></h1>
<%= flashes! %>

<%= form_for @obj, :url => @url, :remote => controller.may_upload, data: { ajax: !controller.may_upload } do |f| %>

  <%= render partial: "shared/model_form", locals: { form_name: controller.paths_name + "/form", edit: true, autofocus: true, f: f } %>

  <%= yield %>

  <div data-role="footer" data-position="fixed">
    <div data-role="navbar">
      <ul>
        <li>
          <%= f.submit(t("myplaceonline.general.save") + " " + t("myplaceonline.category." + controller.category_name).singularize, "data-icon" => "check", "data-iconpos" => "top", "style" => "background-color: green") %>
        </li>
        <% if content_for?(:footerlinks) %>
          <%= content_for(:footerlinks) %>
        <% end %>
        <% if true %>
          <li><%= link_to t("myplaceonline.general.cancel"), controller.obj_path, "data-rel" => "back", "data-icon" => "back" %></li>
          <li><%= link_to t("myplaceonline.general.back_to_all") + " " + t("myplaceonline.category." + controller.category_name), controller.index_path, "data-icon" => "back" %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <script type="text/javascript">
  onPageLoad(function() {
    maybeFocus(".autofocus");
  });
  </script>

<% end %>
