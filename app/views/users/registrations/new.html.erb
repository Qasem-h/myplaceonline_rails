<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, class: "ui-hidden-accessible" %>
  <%= f.email_field :email, autofocus: true, placeholder: t("myplaceonline.general.email") %></div>

  <div><%= f.label :password, class: "ui-hidden-accessible" %>
  <%=
    if @validatable
      f.password_field :password, autocomplete: "off", placeholder: t("myplaceonline.general.passwordwithmin", minchars: @minimum_password_length)
    else
      f.password_field :password, autocomplete: "off", placeholder: t("myplaceonline.general.password")
    end
  %>
  </div>

  <div><%= f.label :password_confirmation, class: "ui-hidden-accessible" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t("myplaceonline.general.password2") %></div>

  <div><%= f.submit t("myplaceonline.general.signup") %></div>
<% end %>

<%= render "devise/shared/links" %>
