<% content_for :heading do -%><%= t("myplaceonline.general.register") %><% end -%>
<h1><%= t("myplaceonline.general.register") %></h1>

<% if Rails.configuration.require_invite_code %>
  <p><%= raw(t("myplaceonline.general.requires_invite_code")) %></p>
<% end %>

<%= form_for(resource, as: resource_name, url: new_registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= flashes! %>

  <% if Rails.configuration.require_invite_code %>
    <div>
      <%= f.label :invite_code, class: "ui-hidden-accessible" %>
      <%= f.password_field :invite_code, class: "autofocus", autocomplete: "off", placeholder: t("myplaceonline.users.invite") %>
    </div>
  <% end %>

  <div>
    <%= f.label :email, class: "ui-hidden-accessible" %>
    <% if Rails.configuration.require_invite_code %>
      <%= f.email_field :email, placeholder: t("myplaceonline.general.email") %>
    <% else %>
      <%= f.email_field :email, class: "autofocus", placeholder: t("myplaceonline.general.email") %>
    <% end %>
  </div>

  <div>
    <%= f.label :password, class: "ui-hidden-accessible" %>
    <%=
      if @validatable
        f.password_field :password, autocomplete: "off", placeholder: t("myplaceonline.general.passwordwithmin", minchars: @minimum_password_length)
      else
        f.password_field :password, autocomplete: "off", placeholder: t("myplaceonline.general.password")
      end
    %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "ui-hidden-accessible" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t("myplaceonline.general.password2") %>
  </div>

  <%= label_tag :agree_terms, raw(t("myplaceonline.users.agree_terms", :terms => link_to(t("myplaceonline.info.terms"), "/info/terms"))) %>
  <%= check_box_tag :agree_terms, 1, @agree_terms, data: { "role" => "flipswitch", "on-text" => t("myplaceonline.general.y"), "off-text" => t("myplaceonline.general.n") } %>

  <div><%= f.submit t("myplaceonline.general.signup") %></div>
  
  <script type="text/javascript">
  onPageLoad(function() {
    maybeFocus(".autofocus");
  });
  </script>
<% end %>

<%= render "users/shared/links" %>
