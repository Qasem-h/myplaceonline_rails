<% content_for :heading do -%><%= t("myplaceonline.users.categories") %><% end -%>
<h1><%= t("myplaceonline.users.categories") %></h1>

<%= flashes! %>

<%= form_tag do %>
  <fieldset>
    <div data-role="fieldcontain">
      <p>
        <%= myp_check_box_tag(:explicit_categories, t("myplaceonline.users.explicit_categories"), @explicit_categories) %>
      </p>
      <p>
        <%= myp_check_box_tag(:experimental_categories, t("myplaceonline.users.experimental_categories"), @experimental_categories) %>
      </p>
      <p>
        <%= myp_check_box_tag(:allow_adding_existing_file, t("myplaceonline.users.allow_adding_existing_file"), @allow_adding_existing_file) %>
      </p>
      <%= myp_text_field_tag(:items_per_page, t("myplaceonline.users.items_per_page"), @items_per_page) %>
    </div>
  </fieldset>
  <div><%= submit_tag t("myplaceonline.general.save") %></div>
<% end %>
