<% content_for :heading do -%><%= t("myplaceonline.users.security_settings") %><% end -%>
<h1><%= t("myplaceonline.users.security_settings") %></h1>

<%= flashes! %>

<%= form_tag do %>
  <fieldset>
    <div data-role="fieldcontain">
      <%= label_tag :encrypt_by_default, t("myplaceonline.users.encrypt_by_default") %>
      <%= check_box_tag :encrypt_by_default, 1, @encrypt_by_default, data: { "role" => "flipswitch" } %>
      
      <p>
      <%= myp_check_box_tag(:minimize_password_checks, "myplaceonline.users.minimize_password_checks", @minimize_password_checks) %>
      </p>
    </div>
    <p><%= t("myplaceonline.users.encrypt_warning") %></p>
  </fieldset>
  <div><%= submit_tag t("myplaceonline.general.save") %></div>
<% end %>
