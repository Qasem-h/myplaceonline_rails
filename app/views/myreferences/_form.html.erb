<%=
  render partial: "myplaceonline/select_or_create", locals: {
    f: f,
    name: :contact,
    existingobj: obj.contact,
    heading: t("myplaceonline.myreferences.contact"),
    objform: "contacts/form",
    existingobjurl: "contact_path",
    searchurl: "/contacts.json?perpage=0",
    edit: edit,
    autofocus: autofocus,
    simpleform: true,
    expanded_if_nil: true
  }
%>
<%= myp_select(f, :reference_type, "myplaceonline.myreferences.reference_type", Myp.translate_options(Myreference::REFERENCE_TYPES), obj.reference_type) %>
<%= myp_text_field(f, :reference_relationship, "myplaceonline.myreferences.reference_relationship", obj.reference_relationship) %>
<%= myp_decimal_field(f, :years_experience, "myplaceonline.myreferences.years_experience", obj.years_experience) %>
<%= myp_check_box(f, :can_contact, "myplaceonline.myreferences.can_contact") %>
<%= myp_text_area_markdown(f, :notes, "myplaceonline.general.notes", obj.notes) %>
