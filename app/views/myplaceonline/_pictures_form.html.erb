<%# arguments: { f: "form", obj: "object", pictures_field: "symbol", position_field: "symbol", itemname: "string" } %>
<%
  position_field ||= nil
  itemname ||= nil
  formjson = [
    {
      type: "file",
      name: "identity_file_attributes.file",
      placeholder: t("myplaceonline.pictures.picture")
    }
  ]
  if !position_field.nil?
    formjson.push({
      type: "position",
      name: position_field.to_s
    })
  end
%>
<%=
  render layout: "myplaceonline/childproperties", locals: {
    f: f,
    heading: t("myplaceonline.pictures.pictures"),
    childpropertiesname: pictures_field,
    childproperties: obj.send(pictures_field.to_s),
    deletebutton: t("myplaceonline.pictures.delete_picture"),
    addbutton: t("myplaceonline.pictures.add_picture"),
    expanded: obj.send(pictures_field.to_s).length > 0,
    position_field: position_field,
    itemname: itemname,
    formjson: formjson
  } do |child_fields, childproperty|
%>
  <% if has_image(childproperty.identity_file) %>
    <%= child_fields.fields_for :identity_file, childproperty.identity_file do |file_fields| %>
      <p><%= image_content(childproperty.identity_file) %></p>
      <%= myp_file_field(file_fields, :file, "myplaceonline.pictures.picture", childproperty.identity_file.file) %>
      <%= myp_text_field(file_fields, :file_file_name, "myplaceonline.files.file_file_name", childproperty.identity_file.file_file_name) %>
      <%= myp_text_area_markdown(file_fields, :notes, "myplaceonline.general.notes", childproperty.identity_file.notes) %>
    <% end %>
  <% end %>
<% end %>
