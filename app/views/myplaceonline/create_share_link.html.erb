<% content_for :heading do -%><%= t("myplaceonline.general.public_link") %><% end -%>

<h1><%= t("myplaceonline.general.public_link") %></h1>

<%= flashes! %>

<p><%= t("myplaceonline.general.link") %>: <%=
  data_row(
    heading: @link,
    content: @link,
    url: true,
    url_external: true,
    url_external_target_blank: true,
    wrap: false
  )
%></p>

<%=
  render(partial: "shared/footer", locals: {
    items: [
      {
        title: I18n.t("myplaceonline.general.back"),
        link: controller.obj_path,
        icon: "back"
      }
    ]
  })
%>
