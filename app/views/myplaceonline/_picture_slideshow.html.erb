<%# locals: pics, random_name %>

<% if !pics.nil? && pics.length > 0 %>
  <script type="text/javascript">
  myplaceonline.onPageLoad(function() {
    $('#<%= random_name %>').magnificPopup({
        items: [
          <%= raw(pics.map{ |pic|
                #title = pic.file_file_name
                title = nil
                if !pic.notes.blank?
                  title = pic.notes
                end
                "{ title: #{title.to_json}, src: '" + file_view_path(pic, :h => pic.thumbnail_hash, token: params[:token]) + "'}"
              }.join(", ")) %>
        ],
        gallery: {
          enabled: true
        },
        type: 'image'
    });
  });
  </script>
<% end %>
