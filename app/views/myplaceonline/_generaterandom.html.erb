<%# Logic duplicated in myplaceonline_final.js formAddItem %>
<div data-role="collapsible">
  <h3><%= heading %></h3>
  <p><a href="#" class="ui-btn" onclick="myplaceonline.getRemoteString(<%= destination %>, $(this).parents('div').first().find('.generate_password_length').val(), $(this).parents('div').first().find('.generate_password_option')); return false;"><%= button %></a></p>
  <div data-role="collapsible">
    <h3><%= t("myplaceonline.passwords.generate_options") %></h3>
    <p><input type="number" class="generate_password_length" value="" placeholder="<%= lengthplaceholder %>" /></p>
    <p><%= myp_check_box_tag("lowercase", "myplaceonline.passwords.generate_lowercase", true, false, "generate_password_option") %></p>
    <p><%= myp_check_box_tag("uppercase", "myplaceonline.passwords.generate_uppercase", true, false, "generate_password_option") %></p>
    <p><%= myp_check_box_tag("numbers", "myplaceonline.passwords.generate_numbers", true, false, "generate_password_option") %></p>
    <p><%= myp_check_box_tag("special", "myplaceonline.passwords.generate_special", true, false, "generate_password_option") %></p>
    <p><%= myp_check_box_tag("special_additional", "myplaceonline.passwords.generate_special_additional", true, false, "generate_password_option") %></p>
  </div>
</div>
