<%= render layout: "shared/model_show" do %>

  <%= attribute_table_row(t("myplaceonline.checklists.checklist_name"), @obj.checklist_name) %>
  <% @obj.all_checklist_items.each do |checklist_item| %>
    <%= table_row_heading(t("myplaceonline.checklists.item")) %>
    <%= attribute_table_row(t("myplaceonline.checklist_items.checklist_item_name"), checklist_item.checklist_item_name) %>
  <% end %>
  <% @obj.pre_checklist_references.each do |x| %>
    <%= table_row_heading(t("myplaceonline.checklists.pre_checklist")) %>
    <%= attribute_table_row_reference(t("myplaceonline.checklists.checklist_name"), "checklist_path", x.checklist) %>
  <% end %>
  <% @obj.post_checklist_references.each do |x| %>
    <%= table_row_heading(t("myplaceonline.checklists.post_checklist")) %>
    <%= attribute_table_row_reference(t("myplaceonline.checklists.checklist_name"), "checklist_path", x.checklist) %>
  <% end %>
  
  <% content_for :prefooterlinks do %>
    <li><%= link_to t('myplaceonline.checklists.generate'), checklist_generate_path(@obj), "data-icon" => "plus" %></li>
  <% end %>

<% end %>
