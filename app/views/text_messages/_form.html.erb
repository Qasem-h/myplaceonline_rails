        edit: true,
        autofocus: true,
        force_existing: true
      }
    ]
  } do |child_fields, childproperty|
%>
  <%=
    render partial: 'myplaceonline/select_or_create', locals: {
      f: child_fields,
      name: :group_attributes,
      existingobj: childproperty.group,
